{
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },

  "content_scripts": [ {
     "all_frames": true,
     "js": [ "content_script.js" ],
     "matches": [
       "http://*/*",
        "https://*/*"
      ],
     "run_at": "document_end"
  } ],

  "manifest_version": 2,

  "name": "Download Plugin",
  "description": "This extension will download a bunch of image",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_title": "Download bunch of images"
  },

  "permissions": [
    "activeTab",
    "tabs"
   ]
}
